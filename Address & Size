//This code demonstrates the workings of memory addresses and sizeof() function 
#include <iostream>
using namespace std;

int main () {

    int x = 25;
    cout << "The adress of x is: " << &x << endl;
    cout << "The size of x is: " << sizeof(x) << " bytes \n";
    cout << "The value in x is: " << x << endl;
    return 0;
}
