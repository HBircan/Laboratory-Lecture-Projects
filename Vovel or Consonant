//This program uses swtch case method to determine whether the letter emtered is vovel or consonant.
#include <iostream>
using namespace std;
// used alphabet: abcdefghijklmnopqrstuvwxyz 

int main() {

    char l{};
    cout << "Enter a letter to see: ";
    cin >> l;
    
    switch (l) {

    case 'b':
    case 'c': 
    case 'd':
    case 'f': 
    case 'g': 
    case 'h': 
    case 'j': 
    case 'k': 
    case 'l': 
    case 'm': 
    case 'n': 
    case 'p': 
    case 'q': 
    case 'r': 
    case 's': 
    case 't': 
    case 'v': 
    case 'w': 
    case 'x':
    case 'y':
    case 'z':
        cout << "It is consonant.";
        break;
    case 'a':
    case 'e':
    case 'i':
    case 'o':
    case 'u':
        cout << "It is a vovel";
        break;
    }
}
